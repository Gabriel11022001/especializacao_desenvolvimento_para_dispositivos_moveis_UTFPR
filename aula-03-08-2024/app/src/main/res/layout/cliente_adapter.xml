<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:elevation="4dp"
    android:layout_margin="10dp" >

    <ImageView
        android:id="@+id/ic_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do cliente"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ic_cliente"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="teste@gmail.com"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_nome"
        app:layout_constraintTop_toBottomOf="@id/txt_nome" />

</androidx.constraintlayout.widget.ConstraintLayout>