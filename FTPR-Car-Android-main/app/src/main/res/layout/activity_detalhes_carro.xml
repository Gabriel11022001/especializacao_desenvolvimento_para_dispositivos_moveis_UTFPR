<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesCarroActivity" >

    <ImageView
        android:id="@+id/img_foto_carro"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/carro_teste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes do carro"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_foto_carro"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txt_nome_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do carro: Carro de teste"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo"
        android:layout_margin="20dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_ano_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ano de lançamento do carro: 1999"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/txt_nome_carro"
        app:layout_constraintTop_toBottomOf="@id/txt_nome_carro"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_licenca_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licença do carro: 1234566"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/txt_ano_carro"
        app:layout_constraintTop_toBottomOf="@id/txt_ano_carro"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_editar_carro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_licenca_carro"
        android:elevation="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btn_deletar_carro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deletar"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/btn_editar_carro"
        app:layout_constraintEnd_toEndOf="@id/btn_editar_carro"
        app:layout_constraintTop_toBottomOf="@id/btn_editar_carro"
        android:elevation="4dp"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>