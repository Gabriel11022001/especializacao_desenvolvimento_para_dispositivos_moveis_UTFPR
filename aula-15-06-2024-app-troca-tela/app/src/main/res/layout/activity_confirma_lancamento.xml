<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmaLancamentoActivity" >

    <TextView
        android:id="@+id/txt_label_codigo_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txt_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_label_codigo_produto"
        app:layout_constraintBottom_toBottomOf="@id/txt_label_codigo_produto"
        android:layout_marginEnd="20dp" />

    <View
        android:id="@+id/view_separador_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cinza_claro"
        app:layout_constraintTop_toBottomOf="@id/txt_label_codigo_produto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txt_label_quantidade_unidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade de unidades:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_separador_1"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txt_quantidade_unidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_label_quantidade_unidades"
        app:layout_constraintBottom_toBottomOf="@id/txt_label_quantidade_unidades"
        android:layout_marginEnd="20dp" />

    <View
        android:id="@+id/view_separador_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cinza_claro"
        app:layout_constraintTop_toBottomOf="@id/txt_label_quantidade_unidades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txt_label_preco_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço do produto:"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_separador_2"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txt_preco_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$9,80"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_label_preco_produto"
        app:layout_constraintBottom_toBottomOf="@id/txt_label_preco_produto"
        android:layout_marginEnd="20dp" />

    <View
        android:id="@+id/view_separador_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cinza_claro"
        app:layout_constraintTop_toBottomOf="@id/txt_label_preco_produto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/txt_valor_total_venda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor total: $200,00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_separador_3"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@color/cinza_claro"
        android:padding="20dp" />

    <Button
        android:id="@+id/btn_confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_valor_total_venda"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:textAllCaps="true"
        android:drawableEnd="@drawable/ic_confirmar" />

</androidx.constraintlayout.widget.ConstraintLayout>